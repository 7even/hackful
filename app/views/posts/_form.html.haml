= form_for(@post) do |f|
  - if @post.errors.any?
    #error_explanation
      %h2
        = pluralize(@post.errors.count, "error")
        prohibited this post from being saved:
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label "This is Job"
    %br/
    = f.check_box :is_job
  .field
    = f.label :title
    %br/
    = f.text_field :title
  #text_field.field
    = f.label :text
    %br/
    = f.text_area :text
  #link_field.field
    = f.label :link
    %br/
    = f.text_field :link
  .actions
    = f.submit
